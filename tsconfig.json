{
 "compilerOptions": {
   "module": "commonjs",
   "declaration": true,
   "noImplicitAny": false,
   "removeComments": true,
   "noLib": false,
   "emitDecoratorMetadata": true,
   "experimentalDecorators": true,
   "target": "es5",
   "sourceMap": true,
   "lib": [
     "es6"
   ],
   "paths": {
      "@purple-messenger/core": ["./packages/core/src"],
      "@purple-messenger/core/*": ["./packages/core/src/*"],
      "@purple-messenger/server": ["./packages/server/src"],
      "@purple-messenger/server/*": ["./packages/server/src/*"],
      "@purple-messenger/client": ["./packages/client/src"],
      "@purple-messenger/client/*": ["./packages/client/src/*"],
    },
    "baseUrl": "./"
 },
 "exclude": [
   "node_modules",
   "**/*.spec.ts",
   "**/build/"
 ]
}
